<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/agmobile_white"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/agmobile_divider"
        />
    <LinearLayout
        android:id="@+id/ll_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:id="@+id/iv_controller"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_map"
            />
        <TextView
            android:id="@+id/tv_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示地图"
            android:textSize="12sp"
            android:textColor="@color/agmobile_black"
            android:layout_marginLeft="4dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_choose_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_auxiliary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/left_imageview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_auxiliary"
            />
        <TextView
            android:id="@+id/left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合规检查"
            android:textSize="12sp"
            android:textColor="@color/agmobile_white"
            android:layout_marginLeft="4dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:clickable="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ll_choose_address"
        android:background="@drawable/background_navigation"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:id="@+id/right_imageview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_navigation"
            />
        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到这去"
            android:textSize="12sp"
            android:textColor="@color/agmobile_black"
            android:layout_marginLeft="4dp"
            />
    </LinearLayout>
</RelativeLayout>
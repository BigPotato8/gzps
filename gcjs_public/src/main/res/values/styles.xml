<resources>

    <style name="AgWater5Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/agmobile_primary</item>
        <item name="colorPrimaryDark">@color/agmobile_primary</item>
        <item name="colorAccent">@color/agmobile_accent</item>
    </style>

    <style name="FullTheme" parent="AgWater5Theme">
        <item name="android:windowBackground">@mipmap/ic_splash_2</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:background">@mipmap/ic_launcher_round</item>-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullNullTheme" parent="AgWater5Theme">
        <!--<item name="android:windowBackground">@color/white</item>-->
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:background">@mipmap/ic_launcher_round</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="DialogTransparent" parent="AgWater5Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="NavigationTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="tintEnable">true</item>
        <item name="textColorNormal">@color/tab_text_normal</item>
        <item name="textColorSelected">@color/tab_text_selected</item>
    </style>

    <!--我的功能菜单选项样式-->
    <style name="MineMenuContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/agmobile_bg_list_item</item>
    </style>

    <style name="MineMenuIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="MineMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/agmobile_text_body</item>
    </style>

    <style name="MineMenuDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@color/agmobile_divider</item>
    </style>

    <style name="MineMenuSpace">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/agmobile_background</item>
    </style>

    <!--换肤设置界面-->
    <style name="SkinSettingPanel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SkinSettingPanelView">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="SkinSettingPanelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/agmobile_text_body</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--分类标题栏-->
    <style name="PartTitleContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/agmobile_surface</item>
    </style>

    <style name="PartTitleDecoration">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:background">@color/agmobile_primary</item>
        <item name="android:layout_marginLeft">@dimen/agmobile_all_spacing_horizontal</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="PartTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/agmobile_text_body</item>
        <item name="android:textSize">@dimen/agmobile_text_body</item>
    </style>


    <style name="CustomDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--&lt;!&ndash;Button确认，例如登录、保存设置、对话框中确定等&ndash;&gt;-->
    <!--<style name="AGMobile.Widget.Button.Positive" parent="Widget.AppCompat.Button.Borderless">  &lt;!&ndash;无阴影&ndash;&gt;-->
    <!--<item name="android:background">@drawable/common_sel_btn_positive</item>-->
    <!--<item name="android:textColor">@drawable/common_sel_btn_text_positive</item>-->
    <!--</style>-->


    <!--上报界面key的样式-->
    <style name="PatrolUploadKeyTextStyle">
        <item name="android:layout_width">@dimen/patrol_upload_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/patrol_upload_view_margin_left</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">@dimen/partrol_upload_text_size</item>
        <item name="android:textColor">#FF666666</item>
        <!-- <item name="android:gravity">right</item>-->
    </style>

    <!--上报Item最外层容器样式-->
    <style name="PatrolUploadItemOuterContainerStyle">
        <item name="android:paddingBottom">@dimen/patrol_upload_text_padding</item>
        <item name="android:paddingRight">@dimen/patrol_upload_text_padding</item>
        <item name="android:paddingTop">@dimen/patrol_upload_text_padding</item>
    </style>

    <!--上报item中id为et_的EditText样式-->
    <style name="PatrolUploadETItemStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">@dimen/patrol_upload_view_margin_left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dust_grey</item>
    </style>


    <declare-styleable name="TextFieldTableItem">
        <attr name="fieldtextViewName" format="string"/>
        <attr name="fieldeditTextHint" format="string"/>
        <attr name="fieldeditMaxLength" format="integer"/>
    </declare-styleable>

    <!--CustomSpinnerTableItem-->
    <declare-styleable name="SpinnerTableItem">
        <attr name="spinnertextViewName" format="string"/>
        <attr name="data" format="reference"/>
    </declare-styleable>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

</resources>

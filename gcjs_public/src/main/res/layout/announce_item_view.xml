<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/agmobile_bg_list_item">

    <View
        android:id="@+id/view_divider_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/agmobile_divider"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/view_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/iv_photo"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/bpm_record_photo_default"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_photo"
            android:layout_toRightOf="@id/iv_photo"
            android:textColor="@color/agmobile_text_body"
            android:textSize="@dimen/agmobile_text_body"
            android:text="申报流水号：201910170004"/>

        <TextView
            android:id="@+id/tv_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_toRightOf="@id/iv_photo"
            android:textColor="@color/agmobile_text_body"
            android:textSize="@dimen/agmobile_text_body"
            android:text="项目/工程名称：康和金沙汇"/>

        <TextView
            android:id="@+id/tv_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_link"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/iv_photo"
            android:textColor="@color/agmobile_text_body"
            android:textSize="@dimen/agmobile_text_body"
            android:text="申报单位/个人：佛山市南海区康和市场投资有限公司"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_per"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/padding_5"
            android:layout_toRightOf="@id/iv_photo"
            android:textColor="@color/agmobile_text_caption"
            android:textSize="@dimen/agmobile_text_body"
            android:text="公示时间：2019-10-17"/>

        <!--<TextView-->
        <!--android:id="@+id/tv_time"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/tv_addr"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginEnd="8dp"-->
        <!--android:layout_marginRight="8dp"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:textColor="@color/agmobile_text_caption"-->
        <!--android:textSize="@dimen/agmobile_text_caption"-->
        <!--tools:text="09:22"-->
        <!--tools:visibility="visible"/>-->

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bpm_bg_state_tag_list"
            android:paddingLeft="6dp"
            android:paddingTop="4dp"
            android:paddingRight="6dp"
            android:paddingBottom="4dp"
            android:textColor="@color/bpm_text_state_tag"
            android:textSize="@dimen/agmobile_text_body_sub"
            android:text="已补全"
            tools:visibility="visible"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
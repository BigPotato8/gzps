<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/view_navigator_gcjs_public_bg_selector"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/view_navigator_gcjs_public_text_selector"
            android:textSize="@dimen/sp_14"/>

        <View
            android:id="@+id/tv_line_right"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_dot"
            android:background="@drawable/view_navigator_gcjs_public_line_selector"
            />

        <View
            android:id="@+id/tv_line_left"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_dot"
            android:background="@drawable/view_navigator_gcjs_public_line_selector"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl"
        android:layout_centerHorizontal="true"
        android:text="测试"
        android:textColor="@color/agmobile_text_body"
        android:textSize="14sp"/>


</RelativeLayout>
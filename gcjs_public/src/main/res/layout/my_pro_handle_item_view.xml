<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/agmobile_bg_list_item">

    <View
        android:id="@+id/view_divider_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/agmobile_divider"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/view_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/iv_photo"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/bpm_record_photo_default"/>
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bpm_bg_state_tag_list"
            android:paddingLeft="6dp"
            android:paddingTop="4dp"
            android:paddingRight="6dp"
            android:paddingBottom="4dp"
            android:text="已受理"
            android:textColor="@color/bpm_text_state_tag"
            android:textSize="@dimen/bga_pp_size_level3"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/tv_bjbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_photo"
            android:layout_toRightOf="@id/iv_photo"
            android:text="办件编号"
            android:textColor="@color/agmobile_text_body"
            android:layout_toLeftOf="@+id/tv_state"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/agmobile_text_body"/>

        <TextView
            android:id="@+id/tv_sxmc"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bjbh"
            android:layout_toRightOf="@id/iv_photo"
            android:text="事项名称"
            android:textColor="@color/agmobile_text_body"
            android:textSize="@dimen/agmobile_text_body_sub"/>

        <TextView
            android:id="@+id/tv_xmdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sxmc"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_toRightOf="@id/iv_photo"
            android:text="项目名称：康和金沙汇"
            android:textColor="@color/agmobile_text_body"
            android:textSize="@dimen/agmobile_text_body_sub"/>

        <TextView
            android:id="@+id/tv_xmmc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_xmdm"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/iv_photo"
            android:text="项目代码"
            android:textColor="@color/agmobile_text_caption"
            android:textSize="@dimen/agmobile_text_body_sub"/>

        <TextView
            android:id="@+id/tv_sszt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_xmmc"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/iv_photo"
            android:text="实施主体"
            android:paddingBottom="@dimen/padding_5"
            android:textColor="@color/agmobile_text_caption"
            android:textSize="@dimen/agmobile_text_body_sub"/>



    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="快捷入口"
        android:textSize="@dimen/rc_dimen_size_18"
        android:textColor="#FF575962"
        android:textStyle="bold"
        android:gravity="left" 
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeff3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_dbrw"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_dbrw"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/home_icon_todolist"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_dbrw"
                app:layout_constraintVertical_chainStyle="packed"
                />
            <TextView
                android:id="@+id/tv_dbrw_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_message_num"
                android:text="0"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/tv_notice"
                android:layout_centerVertical="true"
                app:layout_constraintTop_toTopOf="@+id/iv_dbrw"
                app:layout_constraintRight_toRightOf="@+id/cl_dbrw"
                android:layout_marginRight="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                />
            <TextView
                android:id="@+id/tv_dbrw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待办任务"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_dbrw"
                android:layout_marginTop="8dp"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_ybrw"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_ybrw"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/home_icon_list"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_ybrw"
                app:layout_constraintVertical_chainStyle="packed"
                />
            <TextView
                android:id="@+id/tv_ybrw_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_message_num"
                android:text="0"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/tv_notice"
                android:layout_centerVertical="true"
                app:layout_constraintTop_toTopOf="@+id/iv_ybrw"
                app:layout_constraintRight_toRightOf="@+id/cl_ybrw"
                android:layout_marginRight="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                />
            <TextView
                android:id="@+id/tv_ybrw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已办任务"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_ybrw"
                android:layout_marginTop="8dp"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_wdbj"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_wdbj"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/home_icon_mylist"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_wdbj"
                app:layout_constraintVertical_chainStyle="packed"
                />
            <TextView
                android:id="@+id/tv_wdbj_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_message_num"
                android:text="0"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/tv_notice"
                android:layout_centerVertical="true"
                app:layout_constraintTop_toTopOf="@+id/iv_wdbj"
                app:layout_constraintRight_toRightOf="@+id/cl_wdbj"
                android:layout_marginRight="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                />
            <TextView
                android:id="@+id/tv_wdbj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的办件"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_wdbj"
                android:layout_marginTop="8dp"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_bysl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_bysl"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/home_icon_buyushouli"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_bysl"
                app:layout_constraintVertical_chainStyle="packed"
                />
            <TextView
                android:id="@+id/tv_bysl_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_message_num"
                android:text="0"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/tv_notice"
                android:layout_centerVertical="true"
                app:layout_constraintTop_toTopOf="@+id/iv_bysl"
                app:layout_constraintRight_toRightOf="@+id/cl_bysl"
                android:layout_marginRight="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                />
            <TextView
                android:id="@+id/tv_bysl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不予受理"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_bysl"
                android:layout_marginTop="8dp"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_sbyj"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_sbyj"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/home_icon_yujing"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_sbyj"
                app:layout_constraintVertical_chainStyle="packed"
                />
            <TextView
                android:id="@+id/tv_sbyj_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_message_num"
                android:text="0"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/tv_notice"
                android:layout_centerVertical="true"
                app:layout_constraintTop_toTopOf="@+id/iv_sbyj"
                app:layout_constraintRight_toRightOf="@+id/cl_sbyj"
                android:layout_marginRight="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                />
            <TextView
                android:id="@+id/tv_sbyj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申报预警"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_sbyj"
                android:layout_marginTop="8dp"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_sbyq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_sbyq"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/home_icon_yuqi"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_sbyq"
                app:layout_constraintVertical_chainStyle="packed"
                />
            <TextView
                android:id="@+id/tv_sbyq_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_message_num"
                android:text="0"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/tv_notice"
                android:layout_centerVertical="true"
                app:layout_constraintTop_toTopOf="@+id/iv_sbyq"
                app:layout_constraintRight_toRightOf="@+id/cl_sbyq"
                android:layout_marginRight="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                />
            <TextView
                android:id="@+id/tv_sbyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申报逾期"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_sbyq"
                android:layout_marginTop="8dp"
                />

        </android.support.constraint.ConstraintLayout>



    </LinearLayout>
    
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"

    >
    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:contentView="@+id/ll_content"
        app:leftMenuView="@+id/ll_delete"
        app:canLeftSwipe="false"
        >
        <LinearLayout
            android:id="@+id/ll_delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="删除"
                android:gravity="center"
                android:background="@drawable/weui_bg_btn_plain_red"
                android:textColor="@drawable/weui_bg_btn_warn_text_normal"
                android:textSize="18sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/agmobile_bg_list_item"
            >
            <ImageView
                android:id="@+id/iv_imageView"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="24dp"
                android:src="@mipmap/ic_annex"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="标题"
                android:gravity="center_vertical"
                android:textColor="#FF575962"
                android:ellipsize="end"
                android:layout_marginRight="5dp"
                android:maxLines="2"
                />
            <ImageView
                android:id="@+id/tv_flag_upload"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="8dp"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:src="@drawable/cv_ic_arrow_right_black"
                />
        </LinearLayout>
    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24dp"
        android:background="@color/agmobile_divider"/>
</LinearLayout>
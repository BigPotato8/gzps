<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_5"
        android:orientation="vertical"
        android:background="#2f1488fc"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="济南市中山路万达广场建设审批"
                android:textColor="@color/agmobile_black"
                android:textSize="@dimen/sp_16"/>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/padding_5"
            android:layout_marginTop="@dimen/padding_5"
            android:background="@color/light_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_5"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/padding_5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="材料属性"
                android:textColor="@color/agmobile_text_caption"
                android:textSize="@dimen/sp_16"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/agmobile_black"
                android:textSize="@dimen/sp_16"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_type_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/agmobile_black"
                android:textSize="@dimen/sp_16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_5"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/padding_5"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="申报来源"
                android:textColor="@color/agmobile_text_caption"
                android:textSize="@dimen/sp_16"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_weight="2"
                android:text="窗口申报"
                android:textColor="@color/agmobile_black"
                android:textSize="@dimen/sp_16"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_5"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/padding_5"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="已收/应收"
                android:textColor="@color/agmobile_text_caption"
                android:textSize="@dimen/sp_16"/>

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/agmobile_black"
                android:textSize="@dimen/sp_16"/>
            <TextView
                android:id="@+id/tv_num_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/agmobile_black"
                android:textSize="@dimen/sp_16"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bz_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_5"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/padding_5"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="补正分数"
                android:textColor="@color/agmobile_text_caption"
                android:layout_marginRight="@dimen/padding_10"
                android:textSize="@dimen/sp_16"/>

            <EditText
                android:id="@+id/et_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_marginRight="@dimen/padding_10"
                android:text=""
                android:textColor="@color/agmobile_black"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/bg_edittext_border"
                />
            <EditText
                android:id="@+id/et_num_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text=""
                android:textColor="@color/agmobile_black"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/bg_edittext_border"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bz_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_5"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/padding_5"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="补正意见"
                android:textColor="@color/agmobile_text_caption"
                android:layout_marginRight="@dimen/padding_10"
                android:textSize="@dimen/sp_16"/>

            <EditText
                android:padding="2dp"
                android:id="@+id/et_advice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:gravity="top"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/agmobile_black"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/bg_edittext_border"
                />
            <EditText
                android:visibility="gone"
                android:id="@+id/et_advice_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/agmobile_black"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/bg_edittext_border"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/padding_5"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_selected"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_selected" />
    </LinearLayout>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".gcjs.home.NoticeDetailActivity">
    <com.augurit.agmobile.common.view.navigation.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="详情"
        android:id="@+id/title_bar"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingLeft="@dimen/padding_5"
        android:paddingRight="@dimen/padding_5"
        android:ellipsize="end"
        android:lines="1"
        android:text="APP1.0.3版本更新清单"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_5"
            android:layout_height="wrap_content"
            android:text="更新时间"/>
        <TextView
            android:gravity="right"
            android:layout_width="0dp"
            android:paddingRight="@dimen/padding_5"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2021-03-13 13:03"/>
    </LinearLayout>
    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/WidgetDividerStyle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notice_detail_rv"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="6dp"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="4dp"
    android:background="@drawable/agmobile_bg_card_radius"
    android:elevation="2dp"
    android:orientation="horizontal">

    <View
        android:id="@+id/ll_status_bar"
        android:layout_width="5dp"
        android:layout_height="fill_parent"
        android:background="@drawable/agmobile_vec_line_radius"
        android:backgroundTint="@color/orange" />

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/ll_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_right_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="缺省标题"
                android:textColor="@color/agmobile_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_check_state"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:src="@mipmap/clock_circle_cill"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_urge_state"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:src="@mipmap/clock_circle_cill"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_right_content_serial_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="申报流水号："
                android:textColor="@color/agmobile_grey_3"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_apply_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/light_gray_button_background"
                        android:padding="@dimen/dp_4"
                        android:text="申报类型"
                        android:textColor="@color/agmobile_grey_2"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_stage_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/light_gray_button_background"
                        android:padding="@dimen/dp_4"
                        android:text="阶段名称"
                        android:textColor="@color/agmobile_grey_2"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="事项名称："
                        android:textColor="@color/agmobile_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/agmobile_black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="建设单位："
                        android:textColor="@color/agmobile_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_unit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/agmobile_black"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <Button
                    android:id="@+id/btn_handle"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/agmobile_btn_line"
                    android:text="办理"
                    android:textColor="@color/agmobile_blue" />

                <Button
                    android:id="@+id/btn_check"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/agmobile_btn_line"
                    android:text="查看"
                    android:textColor="@color/agmobile_blue" />

                <Button
                    android:id="@+id/btn_sign"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/agmobile_btn_line"
                    android:text="签收"
                    android:textColor="@color/agmobile_blue" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/line_dash"
            android:layerType="software" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申报时间： "
                    android:textColor="@color/agmobile_grey_3"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_upload_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/agmobile_grey_3"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="承诺办结时间： "
                    android:textColor="@color/agmobile_grey_3"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_commit_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center"
                    android:textColor="@color/agmobile_grey_3"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_examine_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="审查决定"
                android:textColor="@color/agmobile_primary"
                android:textSize="@dimen/sp_12" />

            <ProgressBar
                android:id="@+id/sb_time_status"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:layout_marginLeft="16dp"
                android:progress="50"
                android:progressDrawable="@drawable/agmobile_progress_bar" />

            <TextView
                android:id="@+id/tv_time_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="剩余时限："
                android:textColor="@color/agmobile_grey_3"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_commit_left_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余2日"
                android:textColor="@color/agmobile_grey_3"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
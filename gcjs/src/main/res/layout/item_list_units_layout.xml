<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_list_index_tip"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textColor="@color/agmobile_surface"
            android:textSize="16sp"
            android:background="@drawable/bg_unit_index_pad"
            android:gravity="center"
            android:textStyle="bold"
            android:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/agmobile_black"
            android:layout_marginLeft="4dp"
            android:text="单位信息" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="4dp"
            android:background="@color/agmobile_grey_0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.augurit.agmobile.agwater5.gcjspad.widget.PadEditText
            android:id="@+id/pe_project_unitType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:textViewName="建设单位" />

        <com.augurit.agmobile.agwater5.gcjspad.widget.PadEditText
            android:id="@+id/pe_project_unifiedSocialCreditCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:textViewName="统一社会信用代码" />
    </LinearLayout>

    <com.augurit.agmobile.agwater5.gcjspad.widget.PadEditText
        android:id="@+id/pe_project_applicant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textViewName="单位名称" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.augurit.agmobile.agwater5.gcjspad.widget.PadEditText
            android:id="@+id/pe_project_idrepresentative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:textViewName="法定代表人" />

        <com.augurit.agmobile.agwater5.gcjspad.widget.PadEditText
            android:id="@+id/pe_project_idno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:textViewName="法定代表人身份证号" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.augurit.agmobile.agwater5.gcjspad.widget.PadEditText
            android:id="@+id/pe_project_linkmanName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:textViewName="联系人名称" />

        <com.augurit.agmobile.agwater5.gcjspad.widget.PadEditText
            android:id="@+id/pe_project_linkmanMobilePhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:textViewName="联系人手机号" />
    </LinearLayout>

    <com.augurit.agmobile.agwater5.gcjspad.widget.PadEditText
        android:id="@+id/pe_project_linkmanCertNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textViewName="居民身份证号" />
</LinearLayout>
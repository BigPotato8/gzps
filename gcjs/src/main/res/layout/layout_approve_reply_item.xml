<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <RelativeLayout
            android:id="@+id/ll_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/bga_pp_ic_arrow_down"
                android:tint="@color/agmobile_black"
                />
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="序号"
                android:layout_centerInParent="true"
                android:textColor="@color/agmobile_black"
                android:textSize="14sp"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center"
            android:text="批文批复名称"
            android:textColor="@color/agmobile_black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_create_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="创建人"
            android:textColor="@color/agmobile_black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="创建时间"
            android:textColor="@color/agmobile_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_receive_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="领取状态"
            android:textColor="@color/agmobile_black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_receive_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="领取时间"
            android:textColor="@color/agmobile_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_notify_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="通知时间"
            android:textColor="@color/agmobile_black"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/agmobile_primary"
                android:textSize="14sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/btn_red"
                android:textSize="14sp"
                android:visibility="visible"/>
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_no_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="无电子件"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/agmobile_grey_3"
        android:padding="16dp"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

</LinearLayout>
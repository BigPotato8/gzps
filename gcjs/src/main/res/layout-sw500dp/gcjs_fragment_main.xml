                        <LinearLayout
                            android:id="@+id/ll_content_0"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="@dimen/padding_5"
                            android:layout_marginLeft="@dimen/padding_5"
